{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "branchPrefix": "renovate/",
  "bumpVersion": "patch",
  "configMigration": true,
  "enabled": true,
  "extends": [
    "config:recommended"
  ],
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "setuptools-scm"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "stabilityDays": 14
    },
    {
      "matchDatasources": [
        "pypi"
      ],
      "matchPackageNames": [
        "setuptools-scm"
      ],
      "matchUpdateTypes": [
        "minor"
      ],
      "stabilityDays": 0
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "separateMajorMinor": true,
  "separateMinorPatch": true,
  "separateMultipleMajor": true,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
